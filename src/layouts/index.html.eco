<!DOCTYPE html>
<html>
	<head>
	    <title><%= @document.title %></title>
	    <%- @getBlock("meta").toHTML() %>
	    <%- @getBlock("styles").add(["/styles/style.css"]).toHTML() %>
	</head>
	<body>
		<div class="bigcontent">
			<div class="maincontent">
				<h1><%= @document.title %></h1>
			    <%- @content %>
			    <% for post in @getCollection("html").findAllLive({relativeOutDirPath: 'posts'},[{date:-1}]).toJSON().slice(0, 10): %>
			    	<h2><a href="<%= post.url %>"><%= post.title %></a></h2><br/>
				    <%= post.content %><br/>
				    <hr/>
				<% end %>
			</div>
			<div>
				Older blog posts
				<div class="scrollList">
				    <% for post in @getCollection("html").findAllLive({relativeOutDirPath: 'posts'},[{date:-1}]).toJSON(): %>
					    <a href="<%= post.url %>"><%= post.title %></a>  on <%= @formatDate(post.date) %> <br/>
					<% end %>
				</div>
			<div>
		</div>
	    <%- @getBlock("scripts").toHTML() %>
	</body>
</html>